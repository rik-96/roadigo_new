extends layout

block content
  #product-img-sectn
    #product-img
      img#expanded-img.product-image(src=url)
    .img-row
      .img-column
        img(src=url, alt='Product', onclick='openImg(this);')
      .img-column
        img(src='/images/shop/trial.jpg', alt='Product', onclick='openImg(this);')
      .img-column
        img(src='/images/shop/trial.jpg', alt='Product', onclick='openImg(this);')
      .img-column
        img(src='/images/shop/trial.jpg', alt='Product', onclick='openImg(this);')
  #prodpage-right
    #product-head= name
    .product-price MRP: &nbsp;
      span.prod-price &#8377; #{price}
    .product-price Today's price: &nbsp;
      span.prod-price &#8377; #{price}
    .product-price You save: &nbsp;
      span.prod-price &#8377; 0
    form(action='/cart/', method='POST')
                  input(type='hidden', name='name', value=name)
                  input(type='hidden', name='url', value=url)
                  input(type='hidden', name='price', value=price)
                  input(type='hidden', name='details', value=details)
                  input(type='hidden', name='email', value=email)
                  input(type='hidden', name='prodid', value=prodid)
                  input#buybutton(type='submit', value= 'ADD TO CART')
    #description Description:
    #product-features= details
